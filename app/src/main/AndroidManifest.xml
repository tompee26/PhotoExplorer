<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tompee.utilities.photoexplorer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PhotoExplorerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BrandedLaunch">
        <activity
            android:name=".view.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PhotoListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".view.ImageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".view.base.BaseActivity" />
    </application>

</manifest>