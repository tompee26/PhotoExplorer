<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginBottom="@dimen/category_vertical_margin"
        android:layout_marginLeft="@dimen/category_horizontal_margin"
        android:layout_marginRight="@dimen/category_horizontal_margin"
        android:layout_marginTop="@dimen/category_vertical_margin"
        android:padding="@dimen/category_text_padding"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/light_text"
        android:textStyle="italic" />

</FrameLayout>